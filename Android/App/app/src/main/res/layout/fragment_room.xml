<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainrel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aitch.osi.Room">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/grid1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:text="NA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_column="1"
            android:layout_row="3" />

        <TextView
            android:text="NA"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Room_Name"
            android:id="@+id/textViewname"
            android:layout_alignParentTop="true"
            android:layout_row="0"
            android:layout_column="0" />

        <TextView
            android:text="Temprature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="30dp" />

        <TextView
            android:text="Brightness"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:gravity="left"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_width="120dp" />



        <SeekBar
            android:layout_height="wrap_content"
            android:id="@+id/seekBarbrightness"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_width="400dp"
            android:progressTint="#00000000"
            android:secondaryProgressTint="@android:color/holo_blue_light"/>

        <SeekBar
            android:layout_height="wrap_content"
            android:id="@+id/seekBartemperature"
            android:layout_column="3"
            android:layout_row="3"
            android:layout_width="400dp"
            android:layout_gravity="center_vertical" />

        <CheckBox
            android:text="Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxtemperature"
            android:layout_row="3"
            android:layout_column="4" />

        <CheckBox
            android:text="Auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBoxbrightness"
            android:layout_column="4"
            android:layout_row="1"
            android:layout_marginRight="20dp"
            android:layout_rowSpan="2"
            android:layout_gravity="center_vertical" />

    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/grid1">

        <FrameLayout
            android:id="@+id/frame1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:id="@+id/frame2"
            android:layout_column="0">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame3"
            android:layout_column="0"
            android:layout_row="3">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame4"
            android:layout_column="0"
            android:layout_row="4">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame5"
            android:layout_row="5"
            android:layout_column="0">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:id="@+id/frame6"/>

    </GridLayout>


</RelativeLayout>
